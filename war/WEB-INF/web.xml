<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>UserDBServlet</servlet-name>
    <servlet-class>com.webapps.os.server.UserDBServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserDBServlet</servlet-name>
    <url-pattern>/onlineshop/userDB</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductDBServlet</servlet-name>
    <servlet-class>com.webapps.os.server.ProductDBServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductDBServlet</servlet-name>
    <url-pattern>/onlineshop/productDB</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>OrdersDBServlet</servlet-name>
    <servlet-class>com.webapps.os.server.OrdersDBServiceImpl</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>OrdersDBServlet</servlet-name>
    <url-pattern>/onlineshop/ordersDB</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>OnlineShop.html</welcome-file>
  </welcome-file-list>

</web-app>
